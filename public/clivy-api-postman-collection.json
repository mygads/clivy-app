							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"identifier\": \"+6281234567890\",\n  \"purpose\": \"signup\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/send-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "send-otp"]
						},
						"description": "Send OTP code. Purpose can be: signup, email-verification, or password-reset. OTP is 4-digit and valid for 60 minutes."
					},
					"response": []
				},
